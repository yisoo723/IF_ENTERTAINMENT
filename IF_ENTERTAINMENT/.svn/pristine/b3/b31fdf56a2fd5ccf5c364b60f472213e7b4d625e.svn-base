$(document).ready(function() {

    $('#modalCommentBtn').on('click', function() {
        $('#commentModal').show();
        
    });
    
    $('#commentModal .close').on('click', function() {
        $('#commentModal').hide();
    });
    
    $('#commentButton').on('click',function() {
        var commentContent = $('#commentContent').val();
