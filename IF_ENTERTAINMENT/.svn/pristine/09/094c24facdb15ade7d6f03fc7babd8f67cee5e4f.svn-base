        </thead>
        <tbody>
        <c:set value="${pagingVO.dataList }" var="goodsNoticeList"/>
        <c:choose>
        	<c:when test="${empty goodsNoticeList}">
        		<tr>
        			<td colspan="10">상품 리스트가 존재하지 않습니다.</td>
        		</tr>
        	</c:when>
        	<c:otherwise>
        		<c:forEach items="${goodsNoticeList }" var="goodsNotice">
        			<tr class="prodList" >
			            <td><i class="sngl-slct"></i></td>
			            <a href="/goods/notice/detail.do?bfNo=${goodsNotice.giNo}">
			            <td><span>${goodsNotice.giNo}</span></td>
			            <td><span>${goodsNotice.userId}</span></td>
			            <td><span class="gicontent">${goodsNotice.giContent}</span></td>
			            <td><span class="gireply">${goodsNotice.giReply}</span></td>
			            <td><span>${goodsNotice.giRegdate}</span></td>
			            <td><span>${goodsNotice.giAnsdate}</span></td>
						</a>
			            <td>
						    <c:if test="${empty goodsNotice.giReply}">
					            <span>
					                <a href="#" title="" class="btn-st grn-clr ansBtn">답변하기</a>
					            </span>
						    </c:if>
			            </td>
			          </tr>
        		</c:forEach>
        	</c:otherwise>
        </c:choose>
        </tbody> 
      </table>
      <form action="/goods/delete.do" method="post" id="delFrm">
      	<input type="hidden" name="bfNo" id="gNo"/>
      </form>
    </div>
    <div class="card-footer prod-footer clearfix" id="pagingArea">
		${pagingVO.pagingHTML }
